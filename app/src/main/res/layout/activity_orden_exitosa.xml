<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@color/background">

    <!-- Icono de Ã©xito -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_check_circle"
        android:tint="@color/success"
        android:contentDescription="Orden exitosa"
        android:layout_marginBottom="24dp" />

    <!-- TÃ­tulo -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â¡Orden Realizada con Ã‰xito!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:textAlignment="center"
        android:layout_marginBottom="16dp" />

    <!-- NÃºmero de orden -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/success_light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NÃºmero de Orden"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvNumeroOrden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#ORD-0001"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/success"
                android:fontFamily="monospace"
                tools:text="#ORD-0001" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- InformaciÃ³n de la orden -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“¦ Resumen"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginBottom="16dp" />

            <!-- Total pagado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total Pagado:"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tvTotalPagado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    tools:text="$51.980" />
            </LinearLayout>

            <!-- Estado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Estado:"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pendiente"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/warning" />
            </LinearLayout>

            <!-- Mensaje -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tu pedido ha sido recibido y serÃ¡ procesado pronto. RecibirÃ¡s un email de confirmaciÃ³n."
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVerMisPedidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Mis Pedidos"
            android:textSize="16sp"
            app:icon="@drawable/ic_orders"
            app:iconGravity="textStart"
            android:padding="16dp"
            style="@style/Widget.MaterialComponents.Button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVolverInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver al Inicio"
            android:textSize="16sp"
            app:icon="@drawable/ic_home"
            app:iconGravity="textStart"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
    </LinearLayout>

</LinearLayout>

